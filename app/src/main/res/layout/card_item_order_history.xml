<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="133dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="25dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="10dp"
    android:layout_width="365dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <TextView
            android:background="#2382CD"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:paddingStart="10dp"
            android:text="On Process"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"
                android:layout_width="90dp"
                android:src="@drawable/logotrb" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ohNamaLayanan"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:text="Penggantian LCD"
                    android:textColor="#333131"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_width="wrap_content"
                        android:text="Asus"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text=" | layar retak"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:text="25 Februari 2020"
                android:textSize="12dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:text="Detail"
                android:textColor="#0C81B6"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>