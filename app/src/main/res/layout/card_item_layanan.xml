<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/gambarLayanan"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/invertlogos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_IdLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IdLayanan"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_NamaLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Install Ulang Lite"
                android:textColor="@color/colortrb"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_deskripsiLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="bla bka balamsdkasdkansdlasndkajsdnkjakdasdnamdasda,msdasnd,amsnd,masnd,amsd"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider_recycle"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/tv_HargaLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Rp 20000"
                android:textColor="@color/colortrb"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

