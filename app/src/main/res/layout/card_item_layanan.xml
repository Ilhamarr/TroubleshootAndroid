<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/Gambar_Product"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/invertlogos"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/Nama_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Install Ulang Lite"
            android:textColor="@color/colortrb"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/deskripsi_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="bla bka balamsdkasdkansdlasndkajsdnkjakdasdnamdasda,msdasnd,amsnd,masnd,amsd"
            android:textSize="12sp"
            />

        <View
            android:id="@+id/divider_recycle"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rp 20000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colortrb"
            />
    </LinearLayout>
</LinearLayout>

